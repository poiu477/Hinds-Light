{
  "name": "hinds-light-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "worker:translation": "tsx src/workers/translationWorker.ts",
    "worker:ingest": "tsx src/workers/ingestWorker.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed:sources": "tsx src/scripts/seedSources.ts"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "prisma": "^6.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bullmq": "^5.56.9",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.7.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "rate-limiter-flexible": "^7.2.0",
    "rss-parser": "^3.13.0",
    "zod": "^4.0.16"
  }
}
